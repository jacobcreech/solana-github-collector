# Environment Configuration for Solana GitHub Collector

# Node Environment
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=solana_analytics
DB_LOGGING=false

# Database Pool Settings
DB_POOL_MAX=10
DB_POOL_MIN=2

# Redis Configuration (optional, for future queue implementation)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Ecosystem
ECOSYSTEM=solana

# GitHub Tokens (add as many as you have)
# Get tokens from: https://github.com/settings/tokens
# Required scopes: public_repo, read:user
GITHUB_TOKEN_1=ghp_your_token_here
GITHUB_TOKEN_2=ghp_your_token_here
GITHUB_TOKEN_3=ghp_your_token_here
GITHUB_TOKEN_4=ghp_your_token_here
GITHUB_TOKEN_5=ghp_your_token_here

# Worker Configuration
RUN_ON_STARTUP=true

# GCP Configuration (for deployment)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
